{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Anime Manager",
  "identifier": "com.gxpjy.anime-manager",
  "version": "0.2.0",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Anime Manager",
        "width": 1200,
        "height": 820,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
